<form{{ attributes }}>

    {{ element.form_build_id }}
    {{ element.form_token }}
    {{ element.form_id }}

    <div class="container">
        <div class="my-3 my-sm-4">
            <div class="card">
                <div class="card-body overflow-hidden p-3 py-md-4 px-md-4">
                    <div class="row">
                        <div class="col-xs-12 col-md-8 col-lg-6 m-auto">
                            <h5
                                    class="card-title text-center text-success font-weight-bold text-uppercase"
                            >
                                {{ 'Authorisation'|t }}
                            </h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-7 col-lg-4 m-auto">
                            <a
                                    href="{{ url('social_auth_facebook.redirect_to_fb') }}"
                                    class="btn btn-block d-flex align-items-center justify-content-center btn-with-icon btn-lg btn-purple text-uppercase my-3 my-sm-4 text-nowrap"
                            >
                                <i
                                        class="icon-social-facebook-circular-button font-size-5 font-size-sm-7 mr-2"
                                ></i>
                                {{ 'FACEBOOK ' ~ 'Authorisation'|t }}
                            </a>
                    </div>
                    </div>
                    <hr class="card-divider my-0"/>
                    <div class="row">
                        <div class="col-xs-12 col-md-7 col-lg-4 m-auto">
                            <form class="my-4">
                                <div class="form-group">
                                    <label class="form-label" for="email">{{ 'Email'|t }}</label>
                                    {{ element.name }}
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="password">{{ 'Password'|t }}</label>
                                    <div class="input-with-addon">
                                        {{ element.pass }}
                                        <div class="input-addon">
                                            <a href="{{ url('user.pass.http') }}"
                                               class="btn btn-sm btn-light text-grey">
                                                {{ 'Password recovery'|t }}
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                {{ element.actions.submit }}

                                <hr class="mx-0 my-4 my-sm-5 mx-sm-n5">
                                <p class="card-text text-center">
                                    {{ "Don't have an Girchi account? Register now"|t }}
                                </p>
                                <a
                                        href="{{ url('user.register') }}"
                                        class="btn btn-lg btn-block btn-warning text-uppercase mt-4"
                                >
                                    {{ 'Register'|t }}

                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
