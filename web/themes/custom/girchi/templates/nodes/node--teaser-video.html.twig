{% set image_uri = node.field_image.0.entity.uri.value %}


<div class="media media-column">
    <div class="media-thumb w-100">
        <a href="{{ path('entity.node.canonical', {'node': node.id}) }}" class="media-thumb-link">
            <i class="icon-play-button media-play"></i>
            <img src="{{image_style_url(image_uri , 'top_videos')}}" class="w-100" alt="..." />
        </a>
        {#<span class="media-date font-size-1">2:41</span>#}
    </div>
    <div class="media-body">
        <h6 class="mt-2 font-size-2 line-height-1-3">
            <a
                    href="{{ path('entity.node.canonical', {'node': node.id}) }}"
                    class="text-decoration-none d-block font-weight-bold"
            >
                {{ node.label }}
            </a>
        </h6>
        <span class="text-grey font-size-1 d-flex align-items-center">
                    <i
                            class="icon-clock-circular-outline mr-1
                    "
                    ></i>
                    {{ node.getCreatedTime| format_date('article_short') }}</span
        >
    </div>
</div>