<div class="card mt-3 mt-lg-0 font-size-3">
    <div class="card-body p-3 p-lg-4">
        <h4
                class="font-size-5 font-size-lg-7 font-weight-bold line-height-1-2 text-uppercase"
        >
            {{ data.label }}
        </h4>
        <div class="mt-3 mt-lg-4">
            <div class="row">
                <div class="col-12 col-md-6">
                    <h5
                            class="text-uppercase font-weight-bold border-bottom pb-3"
                    >
                        {{ 'Politicians' | t }}
                    </h5>
                    {% for board_member in  data.board_member_politician %}
                        {% if loop.first %}
                            <div class="border-bottom pb-2 mt-3">
                                {{ board_member }}
                            </div>
                        {% else %}
                            <div class="pb-2 mt-3">
                                {{ board_member }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="col-12 col-md-6">
                    <h5
                            class="text-uppercase font-weight-bold border-bottom pb-3 mt-3 mt-sm-0"
                    >
                        {{ 'Partners'| t}}
                    </h5>
                    {% for board_member in  data.board_member_partner %}
                        {% if loop.first %}
                            <div class="border-bottom pb-2 mt-3">
                                {{ board_member }}
                            </div>
                        {% else %}
                            <div class="pb-2 mt-3">
                                {{ board_member }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>